<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.perfecttoilettime.perfecttoilettime.frontEnd.RatingActivity"
    android:background="@color/neutralBackgroundColor">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateText"
        tools:text="Cleanliness"
        android:textSize="28sp"
        android:textColor="@color/fontColor"
        android:layout_alignParentStart="true" />

    <com.whinc.widget.ratingbar.RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rateText"
        app:rb_max_count="5"
        app:rb_count="3"
        app:rb_empty="@drawable/empty"
        app:rb_fill="@drawable/fill"
        app:rb_space="4dp"
        app:rb_click_rating="true"
        app:rb_touch_rating="true"
        />


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateText2"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="24dp"
        tools:text="Wi-Fi"
        android:textSize="28sp"
        android:textColor="@color/fontColor"
        />

    <com.whinc.widget.ratingbar.RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_below="@+id/rateText2"
        android:layout_centerHorizontal="true"
        app:rb_max_count="5"
        app:rb_count="3"
        app:rb_empty="@drawable/empty"
        app:rb_fill="@drawable/fill"
        app:rb_space="4dp"
        app:rb_click_rating="true"
        app:rb_touch_rating="true"/>





    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateText3"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/ratingBar2"
        tools:text="Busy"
        android:textSize="28sp"
        android:textColor="@color/fontColor" />

    <com.whinc.widget.ratingbar.RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        android:layout_below="@+id/rateText3"
        android:layout_centerHorizontal="true"
        app:rb_max_count="5"
        app:rb_count="3"
        app:rb_empty="@drawable/empty"
        app:rb_fill="@drawable/fill"
        app:rb_space="4dp"
        app:rb_click_rating="true"
        app:rb_touch_rating="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/comment"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ratingBar3"
        android:layout_marginTop="36dp"
        android:text="Comment"
        tools:text="Put your comment here"
        android:textSize="24sp"
        android:ems="10"
        />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateSave"
        tools:text="SAVE"
        android:textSize="24sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/fontColor"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
