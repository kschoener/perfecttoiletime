        android:id="@+id/pref4" />

    <TextView
        android:text="Mirror"
        android:textSize="24dp"
        android:textColor="#253275"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pref4"
        android:layout_alignStart="@+id/pref4"
        android:layout_marginTop="44dp"
        android:id="@+id/pref5" />

    <TextView
        android:text="Faucet"
        android:textSize="24dp"
        android:textColor="#253275"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pref6"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/pref5"
        android:layout_alignStart="@+id/pref5" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="2"
        android:layout_above="@+id/pref4"
        android:layout_alignStart="@+id/seekBar2"
        android:id="@+id/seekBar3" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="2"
        android:layout_above="@+id/pref5"
        android:layout_alignStart="@+id/seekBar3"
        android:id="@+id/seekBar4" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="2"
        android:id="@+id/seekBar5"
        android:layout_alignTop="@+id/pref5"
        android:layout_alignStart="@+id/seekBar4" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
