    <TextView
        android:text="Flush"
        android:textSize="24dp"
        android:textColor="#253275"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pref3"
        android:layout_below="@+id/pref2"
        android:layout_alignStart="@+id/pref2"
        android:layout_marginTop="41dp" />

    <TextView
        android:text="Space"
        android:textSize="24dp"
        android:textColor="#253275"
