<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bath_info"
    android:background="@color/neutralBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.perfecttoilettime.perfecttoilettime.frontEnd.BathInfoActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bathroom"
        android:id="@+id/imageView"
        android:layout_marginBottom="414dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginBottom="369dp"
        android:id="@+id/textView5"
        android:textAlignment="textStart"
        android:text="Building"
        android:textSize="24sp"
        android:textColor="@color/fontColor" />

    <TextView
        android:text="Floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="97dp"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textColor="@color/fontColor" />

    <TextView
        android:text="Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="87dp"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textColor="@color/fontColor" />

    <TextView
        android:text="Feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="49dp"
        android:textColor="@color/fontColor"
        android:textSize="24sp" />

    <TextView
        android:text="Bathroom Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:id="@+id/textView9"
        android:textColor="@color/fontColor"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/imageView" />

    <TextView
        android:text="Capen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="141dp"
        android:id="@+id/textView10"
        android:textSize="24sp"
        android:textColor="@color/cast_intro_overlay_button_background_color" />

    <TextView
        android:text="5/5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/textView11"
        android:id="@+id/textView12"
        android:textColor="@color/cast_intro_overlay_button_background_color" />

    <TextView
        android:text="WiFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/textView12"
        android:id="@+id/textView13"
        android:textColor="@color/cast_intro_overlay_button_background_color" />

    <TextView
        android:text="2nd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="24sp"
        android:textColor="@color/cast_intro_overlay_button_background_color"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/textView10" />
</RelativeLayout>
