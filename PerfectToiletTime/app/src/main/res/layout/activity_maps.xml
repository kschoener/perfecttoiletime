<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontEnd.MapsActivity" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.perfecttoilettime.perfecttoilettime.frontEnd.MapsActivity" />

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/jumpToMeButton"
        android:text="ME"
        android:layout_gravity="top|right"
        android:background="@color/neutralBackgroundColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapsFindBathroom"
        android:layout_gravity="bottom|center"
        android:fontFamily="monospace"
        android:text="Find Bathroom"
        android:textSize="@dimen/infoFontSize"
        android:textColor="@color/fontColor"
        android:background="@color/neutralBackgroundColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/bathroomSpecification"
        android:layout_gravity="bottom|right"
        android:background="@color/neutralBackgroundColor"
        android:text="Bathroom\nSpecification"
        android:textSize="10dp"
        android:onClick="specifyBathroom"/>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/menu_gear"
        android:background="@color/neutralBackgroundColor"
        android:onClick="menuLauncher"
        />


</FrameLayout>