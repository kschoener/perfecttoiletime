<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.steven.perfecttoilettime2.LoadingScreen"
    android:background="@color/neutralBackgroundColor">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pttlogo"
        android:id="@+id/loadingScreenLogo"
        android:adjustViewBounds="true"
        android:cropToPadding="false" />

    <TextView
        android:text="Perfect Toilet Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingScreenTitle"
        android:fontFamily="monospace"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/titleFontSize"
        android:layout_below="@+id/loadingScreenLogo"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingScreenProgressBar"
        android:layout_below="@id/loadingScreenTitle"
        android:layout_centerHorizontal="true" />


</RelativeLayout>